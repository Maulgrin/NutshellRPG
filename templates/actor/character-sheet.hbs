<form class="{{cssClass}} nutshell-sheet flexcol" autocomplete="off">
  <section class="top-layout">
    <div class="primary-column">
      <header class="sheet-header">
        <label for="actor-name">Name</label>
        <input id="actor-name" type="text" name="name" value="{{actor.name}}" />
      </header>

      <footer class="sheet-footer">
        <button type="button" data-action="ranged-attack">Ranged Attack</button>
        <button type="button" data-action="close-opposed">Close Combat Opposed</button>
      </footer>
    </div>

    <section class="sheet-section strikes-section">
      <h2>Strikes</h2>
      <div class="strikes-grid">
        <label>
          <span>Max</span>
          <input type="number" name="system.strikes.max" value="{{system.strikes.max}}" readonly />
        </label>
        <label>
          <span>Taken</span>
          <input type="number" name="system.strikes.taken" value="{{system.strikes.taken}}" />
        </label>
        <label>
          <span>Remaining</span>
          <input type="number" name="system.strikes.remaining" value="{{system.strikes.remaining}}" readonly />
        </label>
      </div>
    </section>
  </section>

  <section class="sheet-section skills-section">
    <h2>Skills</h2>
    <div class="skills-grid">
      {{#each skills as |skill|}}
        <div class="skill-item">
          <label for="skill-{{skill.key}}">{{skill.label}}</label>
          <input id="skill-{{skill.key}}" type="number" name="system.skills.{{skill.key}}" value="{{skill.value}}" />
          <button type="button" data-action="skill-roll" data-skill="{{skill.key}}">Roll</button>
        </div>
      {{/each}}
    </div>
  </section>

  <section class="sheet-section">
    <label for="power-theme">Power Theme</label>
    <input id="power-theme" type="text" name="system.powerTheme" value="{{system.powerTheme}}" />
  </section>

  <section class="sheet-section">
    <label for="gear">Gear</label>
    <textarea id="gear" name="system.gear" rows="4">{{system.gear}}</textarea>
  </section>
</form>
